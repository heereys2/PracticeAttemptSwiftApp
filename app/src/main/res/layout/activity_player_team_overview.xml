<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whitegradiant"
    tools:context=".PlayerTeamOverview"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/txtTeamName"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="54dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="29dp"
        android:gravity="center"
        android:text="Your Team"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:text="Upcoming Events"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btnRecTime"
        app:layout_constraintStart_toStartOf="@+id/tv_status" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="202dp"
        android:layout_height="22dp"
        android:layout_marginBottom="33dp"
        android:layout_marginTop="37dp"
        android:gravity="center"
        android:text="Next Training: Wednesday 7pm"
        app:layout_constraintBottom_toTopOf="@+id/btnRecTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <Button
        android:id="@+id/btnRecTime"
        style="@style/MyButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:onClick="onRecordTime"
        android:text="Record Time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEnterData"
        style="@style/MyButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="73dp"
        android:layout_marginRight="73dp"
        android:layout_marginTop="33dp"
        android:onClick="onEnterData"
        android:text="Enter Data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_status" />

    <Button
        android:id="@+id/button4"
        style="@style/MyButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        android:onClick="onViewResults"
        android:text="View Results"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="View results for"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/spinner_dataEntryResults"
        app:layout_constraintStart_toStartOf="@+id/spinner_dataEntryResults" />

    <Spinner
        android:id="@+id/spinner_dataEntryResults"
        android:layout_width="150dp"
        android:layout_height="26dp"
        android:layout_marginBottom="150dp"
        android:layout_marginTop="150dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnRecTime" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="164dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/swiftfinallogo" />

</android.support.constraint.ConstraintLayout>